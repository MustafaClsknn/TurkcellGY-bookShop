@model User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/AdminTema/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/AdminTema/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/AdminTema/assets/css/style.css">
    <link rel="shortcut icon" href="~/AdminTema/assets/images/favicon.ico" />
  </head>
  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left p-5">
                <div class="brand-logo">
                  <img src="~/AdminTema/assets/images/logo.svg">
                </div>
                <form class="pt-3" asp-action="Login" asp-controller="Users" method="post" asp-route-returnUrl="/Book/BookList">
                  <div class="form-group">
                    <input  class="form-control form-control-lg" name="UserName" placeholder="Kullanıcı Adı">
                  </div>
                  <div class="form-group">
                    <input type="password" class="form-control form-control-lg" name="Password" placeholder="Şifre">
                  </div>
                  <div class="mt-3">
                    <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" >Giriş Yap</button>
                  </div>
                  <div class="my-2 d-flex justify-content-between align-items-center">

                  </div>
                  <div class="text-center mt-4 font-weight-light"> Hesabın yok mu ? <a href="/Users/PanelRegister" class="text-primary">Kayıt Ol</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="~/AdminTema/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/AdminTema/assets/js/off-canvas.js"></script>
    <script src="~/AdminTema/assets/js/hoverable-collapse.js"></script>
    <script src="~/AdminTema/assets/js/misc.js"></script>
  </body>
</html>