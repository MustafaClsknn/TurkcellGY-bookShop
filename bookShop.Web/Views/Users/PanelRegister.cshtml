@model AddUserRequest
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/AdminTema/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/AdminTema/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/AdminTema/assets/css/style.css">
    <link rel="shortcut icon" href="~/AdminTema/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="~/AdminTema/assets/images/logo.svg">
                            </div>
                            <form class="pt-3" asp-action="PanelRegister" asp-controller="Users" method="post">
                                <div class="row">
                                    <div class="col-md-6">
                                        <input type="text" class="form-control form-control-lg" name="FullName" placeholder="Ad Soyad">
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                        <br />
                                        <input type="password" class="form-control form-control-lg" name="Password" id="pass" placeholder="Şifre">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control form-control-lg" name="UserName" placeholder="Kullanıcı Adı" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                        <br />
                                        <input type="password" class="form-control form-control-lg" id="passConfirm" name="Password" placeholder="Şifre Tekrarı">
                                        <span id="passCon" class="text-danger"></span>
                                    </div>
                                </div>
                                <br />
                                <div class="form-group">
                                    <input  class="form-control form-control-lg" name="PhoneNumber" placeholder="Telefon Numarası">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-lg" name="UserMail" placeholder="Email">
                                    <span asp-validation-for="UserMail" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <select class="form-control form-control-lg" name="Role">
                                        <option>Admin</option>
                                        <option>Editör</option>
                                    </select>
                                </div>



                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Kayıt Ol</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Zaten hesabın var mı ? <a href="/Users/PanelLogin" class="text-primary">Giriş Yap</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/AdminTema/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/AdminTema/assets/js/off-canvas.js"></script>
    <script src="~/AdminTema/assets/js/hoverable-collapse.js"></script>
    <script src="~/AdminTema/assets/js/misc.js"></script>
</body>
</html>

<script>
    $(document).ready(function(){

        $("#passConfirm").change(function (){
            $("#passCon"). css("display", "none");
           $(":submit").attr("disabled", true);
           var sifre = $("#pass").val();
           if(sifre == $(this).val()){
               console.log("if");
             $(":submit").removeAttr("disabled");
           }else{
               console.log("else");
           $("#passCon").text("Şifre tekrarı şifre ile uyuşmuyor");
           $("#passCon").css("display", "block");
           }
        })


    })
</script>
