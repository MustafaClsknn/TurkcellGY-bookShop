@model User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <section id="form">
            <div class="container">
                <div class="row">
                    <div class="login-form">
                        <h2>Giriş Yap</h2>
                        <form asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl" >
                            <input type="text" name="UserName" placeholder="Kullanıcı veya Eposta" />
                            <input type="password" name="Password" placeholder="Şifre" />
                            @Html.ValidationSummary()
                            <button type="submit" class="btn btn-default">Giriş Yap</button>
                           
                        </form>
                    </div>
                    <br />
                   Hesabınız yok mu ? ---> <a class="btn btn-warning btn-sm" href="/Users/Register">Kayıt Ol</a> <br /><br />
                   Admin Paneline Giriş Yap ----> <a  class=" btn btn-warning btn-sm" href="/Users/PanelLogin" >Admin Paneli</a>
                </div>
            </div>
        </section>
         
    </div>
    <div class="col-md-4">
    </div>
</div>



