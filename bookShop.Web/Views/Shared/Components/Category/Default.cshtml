@model IEnumerable<Category>
<div class="panel-group category-products" id="accordian">

    <div class="panel panel-default">

        <ul class="list-group " style=" overflow:scroll; max-height:300px;">
            @foreach (var item in Model)
            {
                <li class="list-group-item" style=""><label><input type="checkbox" class="form-check-input me-1" name="filter" value="@item.Id"> <span style="color:grey;" name="">@item.Name</span> </label></li>

            }
        </ul>


    </div>
</div>

