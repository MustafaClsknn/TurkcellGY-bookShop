@model IEnumerable<BookListResponse>
@{
    ViewData["Title"] = "BookList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row ml-2">
    <a type="button" class="  btn btn-success !important" href="/Book/Create" >Kitap Ekle</a>
</div><br />


<table class="table table-bordered paginated" style=" display: block; overflow-x: auto; white-space: nowrap; height: 600px; overflow-y: auto; ">
    <thead>
        <tr>
            <th>Name</th>
            <th>Total Pages</th>
            <th>Price</th>
            <th>DateofPublish</th>
            <th>ImageUrl</th>
            <th>Description</th>
            <th>Language</th>
            <th>CoverType</th>
            <th>Width</th>
            <th>Height</th>
            <th>Category</th>
            <th>Writer</th>
            <th>Publisher</th>
            <th>-</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.TotalPages</td>
                <td>@item.Price</td>
                <td>@item.DateofPublish</td>
                <td><img src="@item.ImageUrl"></td>
                <td>@item.Description</td>
                <td>@item.Language</td>
                <td>@item.CoverType</td>
                <td>@item.Width</td>
                <td>@item.Heigth</td>
                <td>
                    @foreach (var item2 in @item.Categories)
                    {
                        <label>@item2.Name </label>
                    }
                </td>
                <td>@item.Writer.FullName</td>
                <td>@item.Publisher.Name</td>
                <td>
                    <a class="btn btn-warning" href="/Book/Edit/@item.Id">Düzenle</a> <a class="btn btn-danger sil" data-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>

</table>

@section Scripts{

<script>
          $(".sil").click(function(){
          let id = $(this).data('id');
          Swal.fire({
          title: 'Silmek istediğinize emin misiniz?',
          text: "Verileriniz kaybolabilir!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Evet!',
          cancelButtonText:'Vazgeç'
          }).then((result) => {
          if (result.isConfirmed) {
          $.ajax({
          url:"/Book/Delete/" + id,
          method : "GET",
          success:function(data){
                 Swal.fire({
                    title :'İşlem Başarılı!',
                    text : 'Veri silindi',
                    type : 'success',
                 }).then(function(){
                location.reload();
                 });
               }
             })
           }
         })
        })
</script>
}